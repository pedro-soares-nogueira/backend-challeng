// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  debtID String @id
  name String
  governmentId Int
  email String @unique
  debtAmount Float
  debtDueDate String

  @@map("documents")
}